<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WP_Project</title>

  
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WP_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <div class="logo me-auto">
                <h1><a href="index.cshtml"><img src="~/img/logo1.png" height="300" width="150" /> </a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>
            <!-- Menüyü çağır -->
            <nav id="navbar" class="navbar align-items-center ml-auto">
                <ul>
                    <li class="dropdown">
                        <a href="#"><span>Ürünler</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="@Url.Action("Index", "Urunler")">Ürün Ekle</a></li>
                            <li><a href="@Url.Action("Listele", "Urunler")">Ürün Listele</a></li>


                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#"><span>Kategoriler</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="@Url.Action("AnaKategoriEkle", "Kategori")">Ana Kategori Ekle</a></li>
                            <li><a href="@Url.Action("AnaKategoriListele", "Kategori")">Ana Kategori Listele</a></li>
                            <li><a href="@Url.Action("AltKategoriEkle", "AltKategori")">Alt Kategori Ekle</a></li>
                            <li><a href="@Url.Action("AltKategoriListele", "AltKategori")">Alt Kategori Listele</a></li>

                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index", "UyeListele")">Uyeler</a></li>
                    <li><a href="@Url.Action("Index", "Hakkinda")">Hakkında</a></li>
                    <li><a href="@Url.Action("Index", "Iletisim")">İletişim</a></li>







                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><div class="container">
        @RenderBody()
    </div>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>


    <script src="~/js/main.js"></script>

</body>
</html>
